<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_landing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.csci4100u.jasdeep_melvin.mobileapp.MainActivity"
    tools:showIn="@layout/activity_landing_page">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/temporary_landing_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />

        <Button
            android:text="go to canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/open_canvas_button"
            />

        <Button
            android:text="logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout_button" />

    </LinearLayout>

</RelativeLayout>
